# NBA MCP Synthesis System Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000

# AWS RDS PostgreSQL
RDS_HOST=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=5432
RDS_DATABASE=nba_simulator
RDS_USERNAME=postgres
RDS_PASSWORD=your_database_password_here

# AWS S3
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS Glue
GLUE_DATABASE=nba_raw_data
GLUE_REGION=us-east-1

# Project Paths
PROJECT_ROOT=/path/to/your/nba-simulator-aws
SYNTHESIS_OUTPUT_DIR=/path/to/your/nba-simulator-aws/synthesis_output

# AI Model API Keys
# DeepSeek Configuration (Primary Model - Mathematical/SQL Optimization)
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Claude Configuration (Synthesis & Explanation)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Optional - for comparison)
OPENAI_API_KEY=your_openai_api_key_here

# Google (Optional - for comparison)
GOOGLE_API_KEY=your_google_api_key_here

# Ollama (Optional - Local Model for Quick Verification)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:32b

# Slack Notifications (Optional)
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#mcp-synthesis  # Optional: override default channel

# Great Expectations Data Quality Configuration
# S3 bucket for storing validation results and data docs
GX_S3_BUCKET=your-s3-bucket-name
GX_S3_PREFIX=great_expectations/  # Folder path in S3 for GX artifacts
# Note: GX will use RDS_* variables above for database connection
# Note: GX will use AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY for S3 access

# Safety & Performance
MAX_QUERY_ROWS=1000
MAX_FILE_SIZE_MB=1
QUERY_TIMEOUT_SECONDS=30
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Logging
LOG_FILE=logs/mcp_synthesis.log
MCP_LOG_LEVEL=INFO